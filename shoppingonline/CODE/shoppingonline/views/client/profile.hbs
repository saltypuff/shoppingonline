<!DOCTYPE html>
<html>
<head>
  <title>{{this.title}}</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Corinthia&family=Pacifico&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/public/css/client-style.css">
</head>
<body>
  <div class="container">
    <div class ="menu">
      <nav class="navbar navbar-expand-lg">
  <div class="container">
    <a class="navbar-brand" href="/client">Online Shop</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav m-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="/client">Home</a>
        </li>      
        <li class="nav-item">
          <a class="nav-link" href="/client/order">Order</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/client/branch">Branch</a>
        </li>     
        <li class="nav-item">
          <a class="nav-link" href="/client/profile">Profile</a>
        </li>             
      </ul>
      <form class="d-flex">
        <input class="px-2 search" type="search" placeholder="Search" aria-label="Search">
        <button class="btn0" type="submit">Search</button>
      </form>
    </div>
  </div>
</nav>

<div class="container">
  <div class="main1">
    <div class="row">
      <div class="col-md-8 mt-1">
        <div class="card mb-3 content">
          <h2 class="col-m-3 pt-3">About Me</h2>
          <div class="card-body">
            <div class="col-md-3">
              <h5>Full Name</h5>
            </div>
              <div class="col-md-9 text-secondary">
                  {{this.profile.TEN}}
              </div>
          </div>
          <hr>
          <div class="card-body">
            <div class="col-md-3">
              <h5>ClientID</h5>
            </div>
              <div class="col-md-9 text-secondary">
                  {{profile.MADT}}
              </div>
          </div>
            <hr>
            <div class="card-body">
                <div class="col-md-3">
                    <h5>Product Type</h5>
                </div>
                <div class="col-md-9 text-secondary">
                    {{profile.LOAIHANG}}
                </div>
            </div>
          <hr>
          <div class="card-body">
            <div class="col-md-3">
              <h5>PhoneNumber</h5>
            </div>
              <div class="col-md-9 text-secondary">
                  {{profile.SODT}}
              </div>
          </div>
          <hr>
          <div class="card-body">
            <div class="col-md-3">
              <h5>Address</h5>
            </div>
              <div class="col-md-9 text-secondary">
                  {{profile.DCHI}}
              </div>
          </div>
          <hr>
          <div class="card-body">
            <div class="col-md-3">
              <h5>Email</h5>
            </div>
              <div class="col-md-9 text-secondary">
                  {{profile.EMAIL}}
              </div>
          </div>
            <hr>
            <div class="class-body">
                <div class="text-center mt-3">

                    <a href="/client/profile/changepassword">
                        <button type="submit" class="btn btn-primary btn-block">Change password</button>
                    </a>
                </div>
            </div>
        </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>